<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="MainWindow" Height="700" Width="1000">
    <Grid Margin="0,194,0,0">
        <Grid.ColumnDefinitions>  
            <ColumnDefinition Width="350*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="0.7*"/>
            <RowDefinition Height="0.3*"/>
        </Grid.RowDefinitions>
        
        <TextBlock x:Name="tbHi" Grid.Row="0" Text="" FontSize="30"/>

        <Button x:Name="newWorld" Background="CadetBlue" Content="new world" FontSize="30" Click="btnNewWorld_Click" Margin="0,172,1,0" Grid.Row="0"/>
        
        <Button x:Name="btnHello" FontSize="30" Click="btnHello_Click" Margin="0,0,1,0" Grid.ColumnSpan="2" Grid.Row="1">
            <StackPanel>
                <Image Source="icon_image/icon.png" Width="48" Height="48"/>
                <TextBlock x:Name="tbSayHello" Text="Say Hello" HorizontalAlignment="Center"/>
            </StackPanel>
        </Button>
    </Grid>
</Window>
